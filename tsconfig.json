{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    // debugging
    "outDir": "out",
    "sourceMap": true
  },
  "exclude": [".vscode", ".yarn", "node_modules", ".pnp.*", "dist"]
}
